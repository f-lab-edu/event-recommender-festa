<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.festa.dao.AccountsDAO">

    <insert id="signUp" parameterType="com.festa.dto.SignUpDTO">
        INSERT INTO
            USERINFO
                (username,
                password,
                email,
                phoneNo,
                address,
                userLevel
                )
        VALUES
            (#{username},
            #{password},
            #{email},
            #{phoneNo},
            #{address},
            #{userLevel})
    </insert>

    <select id="validateID" parameterType="String">
        SELECT email
        FROM USERINFO
        WHERE
        email = #{email}
    </select>

</mapper>
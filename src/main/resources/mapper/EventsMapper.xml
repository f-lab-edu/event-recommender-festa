<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.festa.dao.EventDAO">

    <select id="getListOfEvents" resultType="com.festa.dao.EventDAO">
        SELECT
            eventNo,
            eventTitle,
            eventContent,
            period,
            registerDate,
            participants,
            writer
        FROM events
        USE INDEX (eventSeq)
    </select>
</mapper>